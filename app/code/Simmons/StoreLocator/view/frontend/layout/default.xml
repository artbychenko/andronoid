<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="locator-link" ifconfig="locator/view/enabled">
                <arguments>
                    <argument name="label" xsi:type="string">Store Locator</argument>
                    <argument name="path" xsi:type="string">locator</argument>
                </arguments>
            </block>
        </referenceBlock>

        <referenceContainer name="header-wrapper">
            <block class="Magento\Framework\View\Element\Html\Link" name="locator-header-links"
                ifconfig="locator/view/enabled" template="Simmons_StoreLocator::link.phtml" after="minicart">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Find A Store</argument>
                    <argument name="path" xsi:type="string" translate="true">locator</argument>
                </arguments>
            </block>
        </referenceContainer>

    </body>
</page>
